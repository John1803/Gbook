{% extends 'WillothewispGuestbookBundle::layout.html.twig' %}

{% block content -%}
{%  include 'WillothewispGuestbookBundle:Post:newPost.html.twig' with {'form': form} %}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Author</th>
                <th>Createdat</th>
                <th>Website</th>
                <th>Post</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.author }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d') }}{% endif %}</td>
                <td>{{ post.url }}</td>
                <td>{{ post.post }}</td>
                <td>{{ post.rating }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Create a new post
            </a>
        </li>
    </ul>
{% endblock %}
